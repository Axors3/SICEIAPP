pipeline{
    agent any
    stages{
        stage('Build') {
            steps {
                bat 'npm install'
            }
        }
        stage('Build Image') {
            steps {
                script {
                    def Name = 'SICEIAPP:${env.BUILD_NUMBER}'
                    docker.build(Name, '--build-arg NODE_ENV=production .')
                    docker.run('--name container:${env.BUILD_NUMBER} -p 8080:8080 ${Name}')
                }
            }
        }
        
    }
}