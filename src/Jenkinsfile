pipeline{
    agent any
    stages{
        stage('Clone Proyect') {
            steps {
                git url: 'https://github.com/Axors3/SICEI_APP.git',branch: 'master'
            }
        }
        stage('Build') {
            steps {
                bat 'npm install'
            }
        }
        stage('Build Image') {
            steps {
                bat "docker build --tag siceiapp-master ."
            }
        }
        stage('Run Image') {
            steps {
                bat "docker run --detach siceiapp-master"
            }
        }
        
    }
}